<%- include ("../partials/header")  %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="" placeholder="Campground Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" id="" placeholder="Price per night in $" min="0.5" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"  name="description" id="description" placeholder="Description" >
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
       
    </div>
</div>
<%- include("../partials/footer")  %> 
