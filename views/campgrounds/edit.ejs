<%- include ("../partials/header")  %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=campground.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
                <div class="form-group">                  
                    <input class="form-control" type="text" name="name" id="" value="<%=campground.name %> " >
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="" value="<%=campground.image %> ">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"  name="description" id="description" value="<%=campground.description %> " >
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%>" > Go Back</a>
        </div>
       
    </div>
</div>
<%- include("../partials/footer")  %> 
