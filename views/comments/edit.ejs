<%- include ("../partials/header")  %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment for <%= campground.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments/<%=comment.id%>?_method=PUT"  method="post">
                <div class="form-group">
                    <textarea class="form-control" required name="text"><%=comment.text%>  </textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%>"  > Go Back</a>
        </div>
       
    </div>
</div>

<%- include("../partials/footer")  %> 
